[ui]
username = mbuchmoyer
# merge = vimdiff
merge = internal:merge3
editor = vim -v
mergemarkers = detailed

[merge-tools]
vimdiff.executable = vim
vimdiff.args = -f -d -m $local $output $other -c "wincmd l" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[pager]
pager = LESS='-FRX' less

[extensions]
pager =
purge =

