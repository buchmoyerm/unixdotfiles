[ui]
username = mbuchmoyer
merge = vimdiff
editor = vim -v

[merge-tools]
vimdiff.executable = vim
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[pager]
pager = LESS='-FRX' less

[extensions]
pager =

[trainingwheels]
prevent-push-dirty = false
