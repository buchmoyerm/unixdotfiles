# ~/.bashrc.cmds to load some userful functions
# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=

# well set the alias as well as add it to profile
# for next login
function add_alias
{
  input="$@"
  if [[ "$@" =~ "=" ]]; then
    c="${input[@]#*=}"
    a="${input[@]%=*}"
  else
    c="$2"
    a="$1"
  fi

  echo "adding alias $a='$c'"
  alias "$a=$c"
  echo "alias $a='$c'" >> $HOME/.bash/.bashrc.aliases
}
