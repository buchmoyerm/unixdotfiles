#!/opt/bb/bin/bash

dir=~/workspace/conrenv-files
cluster=${1}
[ -d ${dir} ] || mkdir ${dir}
cd ${dir}
git init
git remote add upstream bbgithub:conrenv/files
git config core.sparsecheckout true
echo "${cluster}/*" >> .git/info/sparse-checkout
git pull --depth=1 origin master
git remote add origin bbgithub:$(whoami)/files
