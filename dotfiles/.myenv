
# vim: set ft=sh ts=8 :
  
# export LESS="-RFX"

export VISUAL="vim -v -u ~/.vimrc_min -O"
export EDITOR="$VISUAL"

# Stop zsh-syntax-highlighting from highlighting path names
# It is nice, but seems to be slow sometimes
ZSH_HIGHLIGHT_STYLES[path]='none'

POWERLEVEL9K_VCS_BACKENDS=(git hg)

if [[ "${USE_PURE_POWER:-false}" == "true" ]] ; then
    POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(virtualenv dir_writable dir vcs)
    POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status)
else
    #POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(context dir vcs vi_mode)
    POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(host virtualenv dir_writable dir vcs vi_mode)
    #POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time)
    POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status)
    # POWERLEVEL9K_PROMPT_ON_NEWLINE=true
    POWERLEVEL9K_VI_INSERT_MODE_STRING="I"
    POWERLEVEL9K_VI_COMMAND_MODE_STRING="N"
    POWERLEVEL9K_VI_MODE_INSERT_BACKGROUND='005'
    POWERLEVEL9K_VI_MODE_INSERT_FOREGROUND='236'
    POWERLEVEL9K_VI_MODE_NORMAL_BACKGROUND='245'
    POWERLEVEL9K_VI_MODE_NORMAL_FOREGROUND='236'
    POWERLEVEL9K_VI_MODE_INSERT_FOREGROUND='black'
    POWERLEVEL9K_VI_MODE_INSERT_BACKGROUND='245'
    POWERLEVEL9K_VI_MODE_NORMAL_FOREGROUND='black'
    POWERLEVEL9K_VI_MODE_NORMAL_BACKGROUND='red'

    #POWERLEVEL9K_DISABLE_RPROMPT=true

    # POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR=''
    # POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=''
fi

POWERLEVEL9K_VCS_LOADING_TEXT=''
